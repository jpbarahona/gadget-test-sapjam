<Module specificationVersion='2'>
    <ModulePrefs
            title="Twitter"
            description="Twitter prueba"
            author="Twitter PHR JP"
            thumbnail="https://www.importancia.org/wp-content/uploads/1-360x360.png"
            height="800" >
           <Require feature=”osapi”/>
    </ModulePrefs>
    <UserPref
        name="mycolor"
        display_name="Color"
        default_value="Lime"
        datatype="string" />
    <!-- <Content type="html" href="https://raw.githubusercontent.com/jpbarahona/gadget-test-sapjam/master/eg.html"/> -->
    <Content type="html">
        <![CDATA[

      <script type=”text/javascript”>

        function init() {

            osapi.people.getViewer().execute(function(viewerData) {

            if (!viewerData.error) {

              var viewerDiv = document.getElementById(‘current_user_id’);

              viewerDiv.innerHTML = viewerData.displayName;

            };

          });

        }

        gadgets.util.registerOnLoadHandler(init);

      </script>

      <div id=”content”>

        <div id=”greeting”> Hello <span id=”current_user_id”> </span>

        </div>

      </div>

    ]]>
    </Content>
</Module>
